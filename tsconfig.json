{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                                
    /* Modules */
    "module": "commonjs",                              
    /* Emit */
    "outDir": "./dist",                                /* Specify an output folder for all emitted files. */
    // "noEmit": true,                                  /* Disable emitting files from a compilation. */
    /* Interop Constraints */
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    /* Type Checking */
    "strict": true,                                    
    /* Completeness */
    "skipLibCheck": true,
  },
 "include": ["./**/*"]

}
